{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "sourceMap": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "diagnostics": true,
        "outDir": "dist",
        "allowJs": true,
        "lib": [
            "esnext",
            "es6",
            "es5",
            "dom"
        ],
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/@types/*",
                "*"
              ],
            "@components/*": ["src/components/*"],
            "@config/*": ["src/config/*"],
            "@pages/*": ["src/pages/*"],
            "@tests/*": ["src/tests/*"],
            "@utils/*": ["src/utils/*"]
        },
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "build",
        "coverage"
    ]
}